{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,  // Habilita a compatibilidade com importações padrão de módulos CommonJS
    "allowSyntheticDefaultImports": true, // Facilita importações default para módulos CommonJS
    "skipLibCheck": true,  // Ignora checagens de tipos em arquivos de bibliotecas
    "paths": {
      "@/*": [
        "./*"
      ],
      "@firebase/auth": [
        "./node_modules/@firebase/auth/dist/index.rn.d.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
